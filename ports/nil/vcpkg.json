{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "nil",
  "version": "0.0.1",
  "description": "nil libraries",
  "homepage": "https://github.com/njaldea",
  "features": {
    "gate": {
      "dependencies": ["nil-gate"],
      "description": "Node Execution Library"
    },
    "clix": {
      "dependencies": ["nil-clix"],
      "description": "Simplified argument parsing (from boost::program_options)"
    },
    "service": {
      "dependencies": ["nil-service"],
      "description": "Simplified event handling (from boost::asio)"
    },
    "xalt": {
      "dependencies": ["nil-xalt"],
      "description": "Utility library dump"
    },
    "xit": {
      "dependencies": ["nil-xit"],
      "description": "C++ API for Svelte UI"
    },
    "xit-test": {
      "dependencies": [
        { "name": "nil-xit-test", "features": ["gtest"] }
      ],
      "description": "C++ API for Svelte UI"
    }
  }
}