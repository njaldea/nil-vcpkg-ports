{
    "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
    "name": "nil-service",
    "version": "1.0.5",
    "description": "Simplified event handling (from boost::asio)",
    "homepage": "https://github.com/njaldea/nil-service",
    "dependencies": [
        {
            "name": "vcpkg-cmake",
            "host": true
        },
        {
            "name": "vcpkg-cmake-config",
            "host": true
        },
        {
            "name": "boost-asio",
            "version>=": "1.85.0"
        },
        {
            "name": "boost-beast",
            "version>=": "1.85.0"
        },
        "nil-xalt"
    ],
    "features": {
        "ssl": {
            "description": "https and wss",
            "dependencies": [ "openssl" ]
        }
    }
}